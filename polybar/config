[colors]
;background = ${xrdb:color0:#222}
;foreground = ${xrdb:color7:#222}
primary = #ffb52a
secondary = #e60053
alert = #ff0000

background = #002B36
foreground = #BCC3C3
background-alt = #002B36
foreground-alt = #BCC3C3

background-warn = #3E3A09
foreground-warn = #BCC3C3
red = #dc143c 


[bar/dark]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 18
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Hack:pixelsize=8;2
font-1 = FontAwesome5Brands:style=Solid:pixelsize=12:antialias=false;3
font-2 = FontAwesome5Free:style=Solid:pixelsize=9;3
;font-1 = FontAwesome5Free:size=10;5
;font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-1 = wuncon siji:pixelsize=10;2

;separator = |

modules-left = i3 sp1 filesystem
modules-center = 
modules-right = rates sp1 currency sp1 pub_ip space network sp1 alsa2 sp1 xkeyboard sp1 date space gitbook_sync
;modules-right = backlight alsa battery temperature xkeyboard date 

tray-position = right
tray-detached = false
;tray-scale = 1.0
tray-background = ${colors.background-alt}
tray-foreground = ${colors.foreground-alt}
;tray-offset-x = -5
;tray-offset-y = 0

;wm-restack = bspwm
;wm-restack = i3
;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize;

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]

type = internal/xkeyboard
blacklist-0 = num lock

format = <label-layout> <label-indicator>
format-spacing = 0

label-layout = %layout%

label-indicator = %name%
label-indicator-foreground = ${colors.foreground-alt}
label-indicator-background = ${colors.red}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

;label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %free%
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false

;ws-icon-0 = 1;1
;ws-icon-1 = 2;2
;ws-icon-2 = 3;%{F#d76e00}%{F-}
;ws-icon-3 = 4;4
;ws-icon-4 = 5;5

label-mode = %mode%
label-mode-background = ${colors.red}
label-mode-padding = 1 


label-focused = %index%
label-focused-foreground = ${colors.background-alt}
label-focused-background = ${colors.foreground-alt}
label-focused-padding = 1

;label-visible = %icon%
;label-visible-padding = 1
;
;label-urgent = %icon%
;label-urgent-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
labale = %percentage%%



[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/alsa2]
type = internal/alsa
format-volume = <ramp-volume> <label-volume>

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""

format-muted = <label-muted>
label-muted = ""
label-muted-foreground = ${colors.red}


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0


[module/network]
type = internal/network
interface = enp3s0
format-connected = <label-connected>
label-connected = %local_ip%

format-disconnected = <label-disconnected>
label-disconnected = not connected
label-disconnected-foreground = ${colors.red}

[module/pub_ip]
type = custom/script
exec = $HOME/.config/polybar/polybar-script/pub_ip.sh
interval = 10
label = %{T4}%{T-} %output%

[module/space]
type = custom/script
exec = $HOME/.config/polybar/polybar-script/space.sh

[module/sp1]
type = custom/script
exec = $HOME/.config/polybar/polybar-script/sp1

[module/currency]
type = custom/script
exec = $HOME/.config/polybar/polybar-script/usd_ru_eur_price.sh
interval = 3600

[module/gitbook_sync]
type = custom/script
exec = $HOME/.config/polybar/polybar-script/gitbook_sync.sh
tail = true
click-left = echo FFFF

[module/rates]
type = custom/script
exec = $HOME/.config/polybar/polybar-script/binance-rate/binance-rate.sh
interval = 300
label = %{T4}ETH/USDT: %{T-} %output%


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 2
margin-bottom = 2

